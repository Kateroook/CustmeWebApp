@model CustmeWebApp.Models.Project

<div class="container mt-5">
    <div class="row">
        <!-- Головне зображення продукту -->
        <div class="col-lg-9">
            <div class="product-main-img">
                <img src="@Model.ImagesUrl" style="width: 100%;height: 100%;" class="img-fluid" alt="@Model.Title" />
            </div>

            <!-- Галерея зображень -->
@*             <div class="product-gallery mt-4">
                <div class="row">
                    <div class="col-3">
                        <img src="@Model.ImagesUrl" class="img-thumbnail" alt="@Model.Title" />
                    </div>
                    <div class="col-3">
                        <img src="@Model.ImagesUrl" class="img-thumbnail" alt="@Model.Title" />
                    </div>
                    <div class="col-3">
                        <img src="@Model.ImagesUrl" class="img-thumbnail" alt="@Model.Title" />
                    </div>
                </div>
            </div> *@ 
            <section>
                <h2 class="product-title">@Model.Title</h2>
                <!-- Опис -->
                <p class="product-description">
                    @Model.Description
                </p>
                <div class="row">
                    <div class="col-6">
                        @Model.Service?.Name
                    </div>
                    <div class="col-6">
                        Створено @Model.DateCompleted?.ToString("d")
                    </div>
                </div>
            </section>
            <section>
                <div class="row">
                    <div class="col-8">
                        <h2 class="product-title">
                            Про послугу @Model.Service?.Name
                        </h2>
                        <p class="product-description">
                            @Model.Service?.Name
                            @Model.Service?.Description
                        </p>
                    </div>
                    <div class="col-4">
                        <img src="@Model.Service?.ImageUrl" class="img-fluid" style="width: 100%;height: 100%;" alt="@Model.Service?.Name" />
                    </div>
                </div>
            </section>
        </div>

        <!-- Деталі продукту -->
        <div class="col-lg-3" style="position:fixed;">
            <h1 class="product-title">@Model.Title</h1>

            <!-- Ціна -->
            <p class="product-price">@Model.Price?.ToString("C")</p>

            <p>@Model.Service?.Name
                @Model.Service?.Type
            </p>
            Безкоштовна доставка від 2500грн 
            <!-- Кнопка додавання в кошик -->
            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                <input type="hidden" name="projectId" value="@Model.Id" />
                <button type="submit" class="btn btn-primary btn-lg">Додати в кошик</button>
            </form>
            <!-- Кнопка зв'язку (Instagram) -->
            <a href="https://www.instagram.com/custme/" class="btn btn-secondary btn-lg sticky-button mt-2" target="_blank">
                Зв'язатися зі мною
            </a>
        </div>
    </div>

    <!-- Інші рекомендовані продукти (опціонально) -->
    @* <div class="related-products mt-5">
        <h2>Інші роботи</h2>
